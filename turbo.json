{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["lint"],
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "test": {
      "outputs": []
    }
  }
}
